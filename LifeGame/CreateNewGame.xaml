<Window x:Class="LifeGame.CreateNewGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifeGame"
        mc:Ignorable="d"
        Title="CreateNewGame" Height="250" Width="350" FontSize="16" MinWidth="350" MinHeight="250">
    <Grid>
        <StackPanel Height="180" Width="200" MinWidth="200" MinHeight="180" Margin="10">
            <Label Content="Width:"/>
            <TextBox Name="Width"/>
            <Label Content="Height:"/>
            <TextBox Name="Height" />
            <StackPanel Orientation="Horizontal" >
                <Label Content="Wrap edges?"/>
                <ToggleButton Name="WrapEdges" Width="25" Height="25" Margin="20,0,0,0"/>
            </StackPanel>
            <Button Name="Create" Content="Create" Margin="5,5,5,0" FontSize="16" BorderThickness="2" Click="Create_Click"/>
        </StackPanel>
    </Grid>
</Window>
